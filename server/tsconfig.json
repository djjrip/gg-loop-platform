{
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "noEmitOnError": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "outDir": "../dist/server",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "../shared/*"
            ]
        }
    }
}