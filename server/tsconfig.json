{
    "include": [
        "./**/*",
        "../shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "../vite.config.ts",
        "../client/**/*"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "noEmitOnError": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "outDir": "../dist",
        "rootDir": "..",
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "../shared/*"
            ]
        },
        "types": [
            "vite/client"
        ]
    }
}