{
    "package": {
        "productName": "gg-loop-desktop",
        "version": "0.1.0"
    },
    "build": {
        "distDir": "../dist",
        "devPath": "http://localhost:5000",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build"
    },
    "tauri": {
        "bundle": {
            "identifier": "com.ggloop.desktop",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "active": true,
            "category": "Game",
            "copyright": "GG LOOP LLC",
            "externalBin": []
        },
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "http": {
                "all": true,
                "request": true,
                "scope": [
                    "https://*"
                ]
            }
        },
        "windows": [
            {
                "title": "GG LOOP Command Center",
                "width": 1280,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "theme": "Dark",
                "decorations": true
            }
        ],
        "security": {
            "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https://* ws://* wss://* asset: tauri: data: blob:"
        }
    }
}