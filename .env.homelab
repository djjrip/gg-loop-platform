# ───────────────────────────────────────────────────────────────
# DATABASE CONFIGURATION
# ───────────────────────────────────────────────────────────────
POSTGRES_USER=empire
POSTGRES_PASSWORD=CHANGE_TO_SECURE_PASSWORD_IMMEDIATELY
POSTGRES_DB=ggloop_production
POSTGRES_PORT=5432

# Performance tuning (adjust based on your hardware)
POSTGRES_SHARED_BUFFERS=512MB
POSTGRES_EFFECTIVE_CACHE_SIZE=2GB

# ───────────────────────────────────────────────────────────────
# REDIS CACHE
# ───────────────────────────────────────────────────────────────
REDIS_PASSWORD=CHANGE_TO_SECURE_PASSWORD_IMMEDIATELY
REDIS_PORT=6379

# ───────────────────────────────────────────────────────────────
# APPLICATION CORE
# ───────────────────────────────────────────────────────────────
NODE_ENV=production
PORT=3000
SESSION_SECRET=GENERATE_64_CHARACTER_RANDOM_STRING_HERE
BASE_URL=https://ggloop.io

# For local testing, use:
# BASE_URL=http://localhost

# ───────────────────────────────────────────────────────────────
# GAMING APIS
# ───────────────────────────────────────────────────────────────
# Riot Games API (League, Valorant, TFT)
RIOT_API_KEY=RGAPI-your-production-key-here

# ───────────────────────────────────────────────────────────────
# OAUTH PROVIDERS
# ───────────────────────────────────────────────────────────────
# Google OAuth
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-secret

# Discord OAuth
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-secret

# Twitch OAuth
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-secret

# ───────────────────────────────────────────────────────────────
# PAYMENT PROCESSING
# ───────────────────────────────────────────────────────────────
# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-secret
PAYPAL_MODE=live  # Use 'sandbox' for testing

# ───────────────────────────────────────────────────────────────
# OPTIONS HUNTER - MARKET DATA (Tradier API)
# ───────────────────────────────────────────────────────────────
TRADIER_API_KEY=your-tradier-api-key
TRADIER_ACCOUNT_ID=your-tradier-account-id
TRADIER_SANDBOX=false  # Set to 'true' for sandbox testing

# ───────────────────────────────────────────────────────────────
# ANTISOCIAL BOT - SOCIAL PLATFORM APIS
# ───────────────────────────────────────────────────────────────
# Twitter/X API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Reddit API
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USERNAME=your-reddit-username
REDDIT_PASSWORD=your-reddit-password
REDDIT_USER_AGENT=GGLoop/1.0

# Discord Bot
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-server-id

# ───────────────────────────────────────────────────────────────
# MONITORING & OBSERVABILITY
# ───────────────────────────────────────────────────────────────
# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_TO_SECURE_PASSWORD_IMMEDIATELY
GRAFANA_ROOT_URL=https://grafana.ggloop.io  # or http://localhost:3030

# Prometheus
PROMETHEUS_PORT=9090

# Loki
LOKI_PORT=3100

# ───────────────────────────────────────────────────────────────
# CADDY REVERSE PROXY
# ───────────────────────────────────────────────────────────────
# Main domain
DOMAIN=ggloop.io
TLS_EMAIL=admin@ggloop.io

# Subdomains (optional - comment out for localhost only)
HUB_DOMAIN=hub.ggloop.io
GRAFANA_DOMAIN=grafana.ggloop.io
PROMETHEUS_DOMAIN=prometheus.ggloop.io

# For Prometheus basic auth (generate with: caddy hash-password)
PROMETHEUS_USER=admin
PROMETHEUS_PASSWORD_HASH=$2a$14$Dq4pWDfN8RwG0lQF1.5K0.LZB3TtZJ6A8v0o7rKvYj9tLQ8lKh6Oa

# ───────────────────────────────────────────────────────────────
# PORT MAPPINGS (Internal - Do Not Change Unless Necessary)
