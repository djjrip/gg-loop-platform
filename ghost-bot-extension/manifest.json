{
  "manifest_version": 3,
  "name": "Ghost Bot - Virtual Assistant",
  "version": "1.0.0",
  "description": "Your virtual ghost assistant that analyzes tabs and helps automate tasks",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/ghost-16.png",
      "48": "icons/ghost-48.png",
      "128": "icons/ghost-128.png"
    }
  },
  "icons": {
    "16": "icons/ghost-16.png",
    "48": "icons/ghost-48.png",
    "128": "icons/ghost-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

