{
  "manifest_version": 3,
  "name": "Ghost Bot - Virtual Assistant",
  "version": "1.0.3",
  "description": "Your virtual ghost assistant that analyzes tabs and helps automate tasks",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ghost Bot - Your Virtual Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["visual-feedback.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
