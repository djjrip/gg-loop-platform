# Discord Bot Environment Variables
# REQUIRED: Get from https://discord.com/developers/applications

# Bot Token (REQUIRED)
DISCORD_BOT_TOKEN=your_bot_token_here

# Server Configuration (REQUIRED)
DISCORD_GUILD_ID=your_server_id_here
DISCORD_CEO_ID=your_discord_user_id_here

# Channel IDs (Update after bot joins server)
LOG_CHANNEL_ID=
WELCOME_CHANNEL_ID=
LEADERBOARD_CHANNEL_ID=

# GG LOOP API Integration
GG_LOOP_API_URL=https://ggloop.io/api
GG_LOOP_WS_URL=wss://ggloop.io/ws

# Bot Configuration
BOT_PREFIX=!
AUTO_MOD_ENABLED=true
SPAM_DETECTION_ENABLED=true
WELCOME_DM_ENABLED=true

# Rate Limits
MAX_MESSAGES_PER_10_SECONDS=5
MAX_MATCHES_PER_DAY=20

# Environment
NODE_ENV=development
