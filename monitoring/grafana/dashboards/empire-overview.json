{
    "dashboard": {
        "title": "Empire Command Center - Overview",
        "tags": [
            "empire",
            "overview"
        ],
        "timezone": "browser",
        "schemaVersion": 16,
        "version": 0,
        "refresh": "10s",
        "panels": [
            {
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                },
                "id": 1,
                "title": "Container Status",
                "type": "stat",
                "targets": [
                    {
                        "expr": "up",
                        "refId": "A"
                    }
                ],
                "options": {
                    "colorMode": "value",
                    "graphMode": "area",
                    "justifyMode": "auto",
                    "orientation": "auto"
                },
                "fieldConfig": {
                    "defaults": {
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "color": "red",
                                    "value": null
                                },
                                {
                                    "color": "green",
                                    "value": 1
                                }
                            ]
                        },
                        "mappings": [
                            {
                                "type": "value",
                                "options": {
                                    "1": {
                                        "text": "UP",
                                        "color": "green"
                                    },
                                    "0": {
                                        "text": "DOWN",
                                        "color": "red"
                                    }
                                }
                            }
                        ]
                    }
                }
            },
            {
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                },
                "id": 2,
                "title": "CPU Usage",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(process_cpu_seconds_total[5m]) * 100",
                        "refId": "A",
                        "legendFormat": "{{job}}"
                    }
                ],
                "yaxes": [
                    {
                        "format": "percent",
                        "label": "CPU %"
                    },
                    {
                        "format": "short"
                    }
                ]
            },
            {
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                },
                "id": 3,
                "title": "Memory Usage",
                "type": "graph",
                "targets": [
                    {
                        "expr": "process_resident_memory_bytes / 1024 / 1024",
                        "refId": "A",
                        "legendFormat": "{{job}}"
                    }
                ],
                "yaxes": [
                    {
                        "format": "decmbytes",
                        "label": "Memory (MB)"
                    },
                    {
                        "format": "short"
                    }
                ]
            },
            {
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                },
                "id": 4,
                "title": "Request Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(http_requests_total[5m])",
                        "refId": "A",
                        "legendFormat": "{{job}} - {{method}}"
                    }
                ],
                "yaxes": [
                    {
                        "format": "reqps",
                        "label": "Requests/sec"
                    },
                    {
                        "format": "short"
                    }
                ]
            },
            {
                "gridPos": {
                    "h": 10,
                    "w": 24,
                    "x": 0,
                    "y": 16
                },
                "id": 5,
                "title": "Application Logs",
                "type": "logs",
                "datasource": "Loki",
                "targets": [
                    {
                        "expr": "{job=~\".+\"}",
                        "refId": "A"
                    }
                ],
                "options": {
                    "showTime": true,
                    "showLabels": true,
                    "sortOrder": "Descending"
                }
            }
        ],
        "time": {
            "from": "now-1h",
            "to": "now"
        },
        "timepicker": {
            "refresh_intervals": [
                "5s",
                "10s",
                "30s",
                "1m",
                "5m",
                "15m",
                "30m",
                "1h"
            ]
        }
    }
}